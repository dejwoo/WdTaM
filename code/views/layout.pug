doctype html
html(lang="en")
    head
        meta(http-equiv="Content-Type" content="text/html charset=UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='csrf-token', content=_csrf)
        title= "Service application"
        meta(name="keywords", content="{{ pkg.keywords.join(',') }}")
        meta(name="description", content="{{ pkg.description }}")

        block head
            //Import Google Icons
            link(href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
            //link(type="text/css" rel="stylesheet" href="//cdn.materialdesignicons.com/1.7.22/css/materialdesignicons.min.css")
            //Import materialize.css
            link(type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css", media="screen,projection")
            link(type="text/css" rel="stylesheet" href="stylesheets/style.css", media="screen,projection")
            //link(type="text/css" rel='stylesheet', href='/stylesheets/alpha.css')
            link(type="text/css" rel='stylesheet', href='/stylesheets/style.css')

    body
        .messages
            include includes/flash
        include includes/header

        .content
            block content

        include includes/footer

        include includes/foot




