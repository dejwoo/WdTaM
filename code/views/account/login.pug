extends ../layout
include ../mixins

block content
    +namedHeader('Login')
    .container
        .row.center
            h1 Login
            p.lead Please login into your account
            if reason
                .card-panel
                    span.red-text.text-darken-2
                        =reason.message
        .row
            form(role='form',action="/login",method="post", class="col s12 m6 offset-m3")
                input(type='hidden', name='_csrf', value=token)
                .row
                    .input-field.col.s12
                        input#login.validate(type='text', name="username")
                        label(for="login") User Name
                .row
                    .input-field.col.s12
                        input#password.validate(type='password', name="password")
                        label(for="password") Password
                .row
                    a.btn.col.space.s12.m4.waves-effect.waves-light(href='/') Cancel

                    button.btn.col.space.s12.m4.offset-m4.waves-effect.waves-light(type='submit') Submit
        .row.center
            .container
                a.btn-flat.waves-effect.waves-light(href="/register") Not registered yet? Sign in here!
