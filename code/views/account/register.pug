extends ../layout

block content
    main.container
        .row.center
            h1 Register
            p.lead Please register your new account!

        .row
            form.col.s12(role='form',action="/register",method="post", class="col s12 m6 offset-m3")
                input(type='hidden', name='_csrf', value=token)
                .row
                    .input-field.col.s12
                        input#login.validate(type='text', name="username")
                        label(for="login") User Name
                .row
                    .input-field.col.s12
                        input#password.validate(type='password', name="password")
                        label(for="password") Password
                .row
                    .input-field.col.s12.m6
                        input#firstName.validate(type='text', name="firstName")
                        label(for="firstName") First Name
                    .input-field.col.s12.m6
                        input#lastName.validate(type='text', name="lastName")
                        label(for="lastName") Last Name
                .row
                    .input-field.col.s12
                        input#email.validate(type='email', name="email")
                        label(for="email") Email
                .row
                    .input-field.col.s8.push-s2.m8.offset-m2.l8.push-l3
                        .switch.space-switch
                            label(for="isMechanic")
                                = "Customer"
                                input#isMechanic.validate(type="checkbox" name="isMechanic")
                                span.lever
                                = "Mechanic"
                .row.space
                    a.btn.col.space.s12.m4.waves-effect.waves-light(href='/') Cancel

                    button.btn.col.space.s12.m4.offset-m4.waves-effect.waves-light(type='submit') Submit
