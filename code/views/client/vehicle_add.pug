extends ../layout

mixin menuitem_mobile(link,title)
    a.col.s12.space.btn-large.waves-effect.waves-light.orange(href=link) #{title}

block content
    main.container
            .row.center
                h1 Register a new car!
                p.lead Please fill out details of your car!

            .row
                form.col.s12(role='form',action="/client/vehicle/add",method="post", class="col s12 m6 offset-m3")
                    input(type='hidden', name='_csrf', value=token)
                    .row
                        .input-field.col.s12
                            input#name.validate(type='text', name="name")
                            label(for="name") Name of your vehicle
                    .row
                        .input-field.col.s12
                            input#model.validate(type='text', name="model")
                            label(for="model") Model
                    .row
                        .input-field.col.s12.m6
                            input#type.validate(type='text', name="type")
                            label(for="type") Type
                        .input-field.col.s12.m6
                            input#ecv.validate(type='text', name="ecv")
                            label(for="ecv") Vehicle registration plates
                    .row
                        .input-field.col.s12
                            input#vin.validate(type='text', name="vin")
                            label(for="vin") VIN number
                    //- .row
                    //-     .input-field.col.s8.push-s2.m8.offset-m2.l8.push-l3
                    //-         .switch.space-switch
                    //-             label(for="isMechanic")
                    //-                 = "Customer"
                    //-                 input#isMechanic.validate(type="checkbox" name="isMechanic")
                    //-                 span.lever
                    //-                 = "Mechanic"
                    .row.space
                        a.btn.col.space.s12.m4.waves-effect.waves-light(href='/') Cancel

                        button.btn.col.space.s12.m4.offset-m4.waves-effect.waves-light(type='submit') Submit