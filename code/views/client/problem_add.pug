extends ../index

block content
    main.container
        .row.center
            h1 Add a new Problem!
            p.lead To add a new problem please select your vehicle!
        .col.s12.section
            ul.tabs
                li.tab.col.s3.disabled: a.teal-text(
                    id="chooseVehicleLevelTab"
                    href="#"
                    onclick="setAddNewProblemStage(chooseVehicleLevel)"
                ) Choose vehicle
                li.tab.col.s3.disabled: a.teal-text(
                    id="selectProblemLevelTab"
                    href="#"
                    onclick="setAddNewProblemStage(selectProblemLevel)"
                ) Select Problem
                li.tab.col.s3.disabled: a.teal-text(
                    id="additionalInfoLevelTab"
                    href="#"
                    onclick="setAddNewProblemStage(additionalInfoLevel)"
                ) Add info
                li.tab.col.s3.disabled: a.teal-text(
                    id="confirmationLevelTab"
                    href="#"
                    onclick="setAddNewProblemStage(confirmationLevel)"
                ) Review
        .row
            form.col.s12(role='form',action="/client/problem/add",method="post", class="col s12 m6 offset-m3")
                input(type='hidden', name='_csrf', value=token)
                .row#chooseVehicleLevel
                    .input-field.col.s12
                        select#vehicle.validate(name="vehicle_id")
                            option(value="" disabled selected) Choose your option
                            - for (var x = 0; x < vehicles.length; x++)
                                option(value=vehicles[x]._id)
                                    =vehicles[x].name
                        label(for="vehicle") Select your vehicle
                .row.hide
                    .input-field.col.s12
                        input#model.validate(type='text', name="model")
                        label(for="model") Model
                .row.hide
                    .input-field.col.s12.m6
                        input#type.validate(type='text', name="type")
                        label(for="type") Type
                    .input-field.col.s12.m6
                        input#ecv.validate(type='text', name="ecv")
                        label(for="ecv") Vehicle registration plates
                .row.hide
                    .input-field.col.s12
                        input#vin.validate(type='text', name="vin")
                        label(for="vin") VIN number
                //- .row
                //-     .input-field.col.s8.push-s2.m8.offset-m2.l8.push-l3
                //-         .switch.space-switch
                //-             label(for="isMechanic")
                //-                 = "Customer"
                //-                 input#isMechanic.validate(type="checkbox" name="isMechanic")
                //-                 span.lever
                //-                 = "Mechanic"
                .row.space
                    a.btn.col.space.s12.m4.waves-effect.waves-light(href='/') Cancel
                    button.btn.col.space.s12.m4.offset-m4.waves-effect.waves-light(type='button' onclick="addProblemNext()") Next
                    button.hide.btn.col.space.s12.m4.offset-m4.waves-effect.waves-light(type='submit') Submit

