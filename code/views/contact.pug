extends layout

append head
    if user && user.isMechanic
        link(type='text/css' rel='stylesheet' href='/stylesheets/mechanic_main.css' media='all')

append foot
    script(src='/js/contacts.js' type='text/javascript')

mixin userContact(randomUser)
    .card
        p

mixin aboutContent
    main.row.main-content
        article.col.s10.push-s1.m8.push-m2
            h3 Our contacts
            .row
                .col.s12.m7
                    p.flow-text If you have any questions/feedback or would like to get in touch with us, here are our contacts
                    #contacts
                .col.s12.m5
                    h4 Our headquarters
                    img#googleMap(src="https://maps.googleapis.com/maps/api/staticmap?center=Bratislava,SK&zoom=14&scale=1&size=300x200&key=AIzaSyCSZzABIzY7QTr-7Fk05fEeg-I5HHZrKr8")

            h4 Socials
                .card
                    h5#facebook Facebook
                .card
                    h5#google Google+
                .card
                    h5#Twitter Twitter



block body-inner
    include includes/header
    include includes/sidebar
    block content
    if user && user.isMechanic
        .parent
            .content-panel
                +aboutContent
            include includes/footer
    else
        +aboutContent
        include includes/footer
