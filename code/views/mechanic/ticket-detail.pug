                        .modal-footer
                            a.modal-action.modal-close.waves-effect.waves-red.btn-flat(href="#!") Disagree
                            a.modal-action.modal-close.waves-effect.waves-green.btn-flat#modalAgree(href="#!") Agree
        include ../includes/footer








