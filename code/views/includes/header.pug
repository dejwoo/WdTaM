block header
    header.header
        nav.light-blue
            .nav-wrapper.row
                if (!user)
                    .col.s5.m3
                        span.brand-logo
                            a(href="/") eService

                    ul.right.hide-on-med-and-down
                        li: a(href="#") Help
                        li: a(href="/register") Register
                        li: a(href="/login") Login
                    a.right.hide-on-large-only.dropdown-button(href="#" data-activates="nav-mobile" data-beloworigin="true")
                        i.material-icons more_vert
                    ul#nav-mobile.dropdown-content.right
                        li: a(href="/login") Login
                        li: a(href="/register") Register
                        li: a(href="/help") Help
                else
                    if user.isMechanic
                        a.hamburger(href='#')
                            span.material-icons menu
                    a.brand-logo(href='/')
                        if(user.isMechanic)
                            = 'eService Dashboard'
                        else
                            = 'eService'
                    if (user.isMechanic)
                        //form.left.search.col.s6.hide-on-small-and-down.input-field
                                input#search(type="search",placeholder="Search",autocomplete="off")
                                label.active(for="search")
                                    i.material-icons.search-icon search

                        ul.right.hide-on-med-and-up
                            li
                                a(href='/logout') Logout

                    if !user.isMechanic
                        ul.right.hide-on-med-and-down
                            li: a(href="/client/vehicles/1") Vehicles
                            li: a(href="#") History
                            li: a(href="/logout") Logout
                        a.right.hide-on-large-only.button-collapse(href="#" data-activates="nav-mobile")
                            i.material-icons more_vert
                        ul#nav-mobile.side-nav
                            if user
                                li
                                    div.userView
                                        div.background
                                            img(src="https://unsplash.it/500/375?image=1019" alt="background picture")
                                        a(href="#!user")
                                            if (user && !user.profile_img)
                                                -var letter = user.username.substr(0,1)
                                                span(data-letters=letter)
                                        a(href="#!name")
                                            span.white-text.name
                                                =user.username
                                        a(href="#!email")
                                            span.white-text.email
                                                =user.email
                            li: a.btn-flat.waves-effect(href="/client/problems/open/latest") Open Problems
                            li: a.btn-flat.waves-effect(href="/client/problems/resolved/latest") Resolved Problems
                            li: a.btn-flat.waves-effect(href="/client/problems/resolved/latest") History
                            li: a.btn-flat.waves-effect(href="/client/vehicles/latest") Vehicles
                            li: a.btn-flat.waves-effect(href="/logout") Logout

                //if (user && !user.profile_img)
                    -var letter = user.username.substr(0,1)
                    .col.s9.m6.right
                        img.circle(src='' alt='' data-letters=letter)